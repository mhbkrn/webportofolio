<div class="container">
  <div class="admin-header">
    <h1>Add New Project</h1>
    <a href="/admin/projects" class="btn btn-secondary">Back to Projects</a>
  </div>

  <div class="admin-content">
    <div class="project-form">
      <% if (locals.error) { %>
        <div class="error-message alert alert-danger">
          <%= error %>
        </div>
      <% } %>
      
      <form action="/admin/projects/add" method="POST" novalidate>
        <div class="form-group">
          <label for="title">Project Title</label>
          <input type="text" id="title" name="title" value="<%= locals.data ? data.title : '' %>" required>
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" rows="4" required><%= locals.data ? data.description : '' %></textarea>
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          <input type="text" id="image" name="image" value="<%= locals.data ? data.image : '' %>" required>
        </div>

        <div class="form-group">
          <label for="category">Category</label>
          <select id="category" name="category" required>
            <option value="">Select a category</option>
            <option value="frontend">Frontend</option>
            <option value="backend">Backend</option>
            <option value="fullstack">Full Stack</option>
            <option value="mobile">Mobile App</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div class="form-group">
          <label for="technologies">Technologies (comma-separated)</label>
          <input type="text" id="technologies" name="technologies" placeholder="e.g. Node.js, Express, MongoDB" value="<%= locals.data ? data.technologies : '' %>" required>
        </div>

        <div class="form-group">
          <label for="githubLink">GitHub Link</label>
          <input type="url" id="githubLink" name="githubLink" value="<%= locals.data ? data.githubLink : '' %>" required>
        </div>

        <div class="form-group">
          <label for="liveLink">Live Demo Link</label>
          <input type="url" id="liveLink" name="liveLink" value="<%= locals.data ? data.liveLink : '' %>" required>
        </div>

        <button type="submit" class="btn btn-primary">Add Project</button>
      </form>
    </div>
  </div>
</div>