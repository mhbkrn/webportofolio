<div class="container">
  <div class="admin-header">
    <h1>Manage Projects</h1>
    <a href="/admin/projects/add" class="btn btn-primary">Add New Project</a>
  </div>

  <div class="admin-content">
    <div class="project-list">
      <% if (projects.length === 0) { %>
        <p class="no-items">No projects found. Add your first project!</p>
      <% } else { %>
        <% projects.forEach(project => { %>
          <div class="project-item">
            <div class="project-info">
              <img src="<%= project.image %>" alt="<%= project.title %>" class="project-thumb">
              <div class="project-details">
                <h3><%= project.title %></h3>
                <p><%= project.description %></p>
                <div class="project-tech">
                  <% project.technologies.forEach(tech => { %>
                    <span class="tech-tag"><%= tech %></span>
                  <% }) %>
                </div>
              </div>
            </div>
            <div class="project-actions">
              <a href="/admin/projects/edit/<%= project._id %>" class="btn btn-secondary">Edit</a>
              <form action="/admin/projects/delete/<%= project._id %>" method="POST" class="delete-form">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this project?')">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</div>